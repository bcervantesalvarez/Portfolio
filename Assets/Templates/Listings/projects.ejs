<!-- projects-sections.ejs -->

<!-- Section 1: "Statistics" -->
<section class="ho-band stats-band">
  <h2 class="band-title">Statistics</h2>
  <div class="my-grid-container">
    <% for (const item of items) { %>
      <% if (item.categories && item.categories.includes("Statistics")) { %>
        
        <article class="ho-card">
          <a href="<%- item.path %>" class="read-more-link">Read More</a>
          
          <div class="image"
               style="background-image:url('<%= item.image ?? "Assets/Images/default.png" %>');">
          </div>
          
          <div class="group-info">
            <h3><%= item.title %></h3>
            <p class="teaser"><%= item.teaser %></p>
            <p class="description"><%= item.description %></p>
          </div>
          
          <div class="node-link">
            <a href="<%- item.path %>" class="read-more-btn">Read More &gt;</a>
          </div>
        </article>
        
      <% } %>
    <% } %>
  </div>
</section>

